using System;
using System.Collections;
using System.Collections.Generic;
using UnityEngine;

public class FirstPersonCamera : MonoBehaviour
{
    [Tooltip("Camera跟隨目標")]
    public Transform target;
    //方向靈敏度
    [Tooltip("水平軸靈敏度")]
    public float sensitivity_X = 2;
    [Tooltip("垂直軸靈敏度")]
    public float sensitivity_Y = 2;

    //上下最大視角(Y軸)
    [Tooltip("最小垂直角度")]
    public float minVerticalAngle = -60;
    [Tooltip("最大垂直角度")]
    public float maxVerticalAngle = 60;

    public Vector3 offset;
    float mouse_X = 0;
    float mouse_Y = 0;

    private void Awake()
    {
        //設定游標狀態，鎖在畫面中央
        Cursor.lockState = CursorLockMode.Locked;
        //是否顯示游標
        Cursor.visible = false;
    }
    

   //Vecto3.*** or new Vector3(座標),小數需加f
   // public Vector3 Vec3_MovePos = new Vector3(0, 0.5f, 0);

    // Start is called before the first frame update
    void Start()
    {
        //設定初始位置
        transform.position = target.position+Vector3.up*offset.y;//設定位置
        //Rigidbody rigidbody = GetComponent<Rigidbody>();
        //if (rigidbody)
        //{
        //    rigidbody.freezeRotation = true;
        //}

    }

    // Update is called once per frame
    void Update()
    {
        //設定初始位置
        transform.position = target.position + Vector3.up * offset.y;//設定位置
        CheckCursorState();
        if (Cursor.lockState == CursorLockMode.Locked)
        {
            //根據滑鼠移動的快慢（增量），獲得相機左右旋轉的角度（處理X）
            mouse_X += Input.GetAxis("Mouse X") * sensitivity_X;
            //根據滑鼠移動的快慢（增量），獲取相機上下移動的角度（處理Y）
            mouse_Y += Input.GetAxis("Mouse Y") * sensitivity_Y;
            //角度限制
            mouse_Y = Mathf.Clamp(mouse_Y, minVerticalAngle, maxVerticalAngle);
            //設定攝像機角度
            transform.rotation = Quaternion.Euler(-mouse_Y, mouse_X, 0);
        }
    }


    private void LateUpdate()
    {
   
    }
    private void CheckCursorState()
    {
        if(Input.GetKeyDown(KeyCode.Escape))
        {
            if (Cursor.lockState == CursorLockMode.None)
                Cursor.lockState = CursorLockMode.Locked;
            else
                Cursor.lockState = CursorLockMode.None;
        }
    }
    
}
